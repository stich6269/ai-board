{
  "name": "funding-harvester-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"WEB,CONVEX,SERVER\" --prefix-colors \"cyan,magenta,green\" \"npm run dev -w apps/web\" \"npx convex dev\" \"npm run dev -w apps/server\"",
    "build": "npm run build -w apps/web",
    "lint": "npm run lint -w apps/web"
  },
  "overrides": {
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5"
  },
  "dependencies": {
    "ccxt": "^4.4.35",
    "convex": "^1.17.0",
    "dayjs": "^1.11.13",
    "protobufjs": "^7.3.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.6.2",
    "zod": "^4.3.6"
  }
}